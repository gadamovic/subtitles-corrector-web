
global:
  scrape_interval: 15s  # By default, scrape targets every 15 seconds.
  
rule_files:
  - /etc/prometheus/alert-rules.yaml

scrape_configs:
      
  - job_name: 'subtitles-tomcat'
    static_configs:
      - targets:
          - 'subtitles-tomcat:8080'
    metrics_path: 'actuator/prometheus'
    
  - job_name: 'host_linux'
    static_configs:
      - targets:
        - 'node-exporter:9100'

  - job_name: cadvisor
    static_configs:
    - targets:
      - cadvisor:9088
      
alerting:
  alertmanagers:
    - scheme: http
      static_configs:
        - targets: [ 'alertmanager:9089' ]