
#PROD 
services:

  subtitles-tomcat:
    image: 841162706718.dkr.ecr.eu-north-1.amazonaws.com/subtitles/subtitles-corrector:{{ app_version }}
    container_name: subtitles-tomcat
    restart: unless-stopped
    environment:
      TOMCAT_KEYSTORE_PASSWORD: {{ TOMCAT_KEYSTORE_PASSWORD }}
      JAVA_OPTS: -Xmx512M -Xms128M -Duser.timezone=Europe/Belgrade
      APP_ENVIRONMENT: prod
      MAIL_SENDER_PASSWORD: {{ MAIL_SENDER_PASSWORD }}
      ADMIN_EMAIL_ADDRESS: {{ ADMIN_EMAIL_ADDRESS }}
      EMAIL_ADDRESS_FOR_SENDING: {{ EMAIL_ADDRESS_FOR_SENDING }}
      OPEN_AI_API_KEY: {{ OPEN_AI_API_KEY }}
      DEEPL_API_KEY: {{ DEEPL_API_KEY }}

    volumes:
      - ~/.aws:/root/.aws
      - /home/ec2-user/subtitles-corrector-files/docker-volumes/letsencrypt:/home/certbot/challenge
      - /home/ec2-user/subtitles-corrector-files/docker-volumes/letsencrypt/data:/home/certbot/certs
      - /home/ec2-user/subtitles-corrector-files/logs:/home/logs

  redis:
    image: redis:8.0-M02-alpine3.20
    hostname: redis-server
    container_name: redis-server

  certbot:
    image: certbot/certbot
    container_name: certbot
    entrypoint: "/bin/sh -c 'trap exit TERM; while :; do sleep 1 & wait $!; done;'"
    volumes:
        #certbot places challenge files under /var/www/html
      - /home/ec2-user/subtitles-corrector-files/docker-volumes/letsencrypt:/var/www/html
      - /home/ec2-user/subtitles-corrector-files/docker-volumes/letsencrypt/data:/etc/letsencrypt

  prometheus:
    image: docker.io/prom/prometheus:v3.1.0
    container_name: prometheus
    command: "--config.file=/etc/prometheus/prometheus.yaml"
    volumes:
      - /home/ec2-user/subtitles-corrector-files/docker-volumes/prometheus/config:/etc/prometheus/:ro
      - prometheus-data:/prometheus
    restart: unless-stopped

  alertmanager:
    image: prom/alertmanager:v0.27.0
    restart: unless-stopped
    container_name: alertmanager
    volumes:
      - /home/ec2-user/subtitles-corrector-files/docker-volumes/prometheus/config:/etc/alertmanager:ro
      - alertmanager-data:/data
    command: --config.file=/etc/alertmanager/alertmanager.yaml --log.level=debug --web.listen-address=0.0.0.0:9089

    
  grafana:
    image: docker.io/grafana/grafana-oss:11.4.0
    container_name: grafana
    ports:
      - "3000:3000"
    volumes:
      - grafana-data:/var/lib/grafana
      - /home/ec2-user/subtitles-corrector-files/docker-volumes/grafana/conf/defaults.ini:/usr/share/grafana/conf/defaults.ini
      - /home/ec2-user/subtitles-corrector-files/docker-volumes/letsencrypt/data:/home/certbot/certs

    restart: unless-stopped

  node-exporter:
    image: prom/node-exporter:latest
    container_name: node-exporter
    restart: unless-stopped
    volumes:
      - /proc:/host/proc:ro
      - /sys:/host/sys:ro
      - /:/rootfs:ro
    command:
      - '--path.procfs=/host/proc'
      - '--path.rootfs=/rootfs'
      - '--path.sysfs=/host/sys'
      - '--collector.filesystem.mount-points-exclude=^/(sys|proc|dev|host|etc)($$|/)'

  cadvisor:
    image: gcr.io/cadvisor/cadvisor:v0.47.2
    container_name: cadvisor
    healthcheck:
      test: ["CMD-SHELL", "wget -qO- http://0.0.0.0:9088/healthz || exit 1"]
      interval: 30s
      timeout: 5s
      retries: 3
    volumes:
    - /:/rootfs:ro
    - /var/run:/var/run:rw
    - /sys:/sys:ro
    - /var/lib/docker/:/var/lib/docker:ro
    - /dev/kmsg:/dev/kmsg
    command: '-port=9088'

  nginx:
    image: nginx:1.27.4
    container_name: nginx
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - /home/ec2-user/subtitles-corrector-files/docker-volumes/nginx/conf:/etc/nginx/conf.d
      - /home/ec2-user/subtitles-corrector-files/docker-volumes/nginx/ssl:/etc/letsencrypt
      - /home/ec2-user/subtitles-corrector-files/docker-volumes/letsencrypt/data:/home/certbot/certs
    depends_on:
      - subtitles-tomcat

  promtail:
    container_name: promtail
    image: grafana/promtail:main-da3aab4
    volumes:
      - /home/ec2-user/subtitles-corrector-files/docker-volumes/promtail:/etc/promtail/config
      - /home/ec2-user/subtitles-corrector-files/logs:/etc/promtail/logs
    command: -config.file=/etc/promtail/config/promtail-config.yaml

  loki:
    container_name: loki
    image: grafana/loki:main-da3aab4
    command: -config.file=/etc/loki/local-config.yaml
    volumes:
     - /home/ec2-user/subtitles-corrector-files/docker-volumes/loki:/loki
     - /home/ec2-user/subtitles-corrector-files/docker-volumes/loki-config:/etc/loki

volumes:
  prometheus-data:
     driver: local
  grafana-data:
     driver: local
  alertmanager-data:
     driver: local
